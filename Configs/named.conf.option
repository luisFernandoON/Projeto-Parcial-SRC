options {
    directory "/var/cache/bind";
    forwarders {
        8.8.8.8;
        1.1.1.1;
    };
    forward only;

    allow-query {
        192.168.1.0/24;
        192.168.2.0/24;
        localhost;
    };

    allow-recursion {
        192.168.1.0/24;
        192.168.2.0/24;
        localhost;
    };

    dnssec-validation yes;
    recursion yes;
    listen-on { 
        192.168.1.2;
        192.168.2.2;
        };
    listen-on-v6 { none; };

};